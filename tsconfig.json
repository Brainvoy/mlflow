{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"moduleResolution": "node",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"declaration": true,
		"pretty": true,
		"rootDir": "src",
		"outDir": "dist/lib",
		"declarationDir": "dist/types"
	},
	"include": ["src"]
}